@model IEnumerable<MonedaCubana.Models.Taller>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutSolution.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Nuevo", "Create", "Controller", new { @class = "btn btn-info", style = "margin-bottom:1em" })
</p>

<table class="display tableDesign" id="Taller">
    <thead>
        <tr>
            <th>Sel.</th>
            <th>Eliminar</th>
            <th>
                Plan Curricular
            </th>
            <th>
                Taller
            </th>
            <th>
                Período
            </th>
          
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td style="text-align:center">
                    @*<i class="fa fa-edit"></i>*@
                    @Html.ActionLink(" ", "Edit", new { id = item.Nombre }, new { @class = "fa fa-edit", style = "margin-bottom:1em" })
                    
                </td>
                <td style="text-align:center">
                    @*<i class="fa fa-close"></i>*@
                    <i class="fa fa-close" data-tipo="borrar" data-nombre="@item.Nombre"></i>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Programa_Entrenamiento.Plan_Curricular)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Periodo)
                </td>
               
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script src="~/res/jsTaller.js"></script>

}