@model IEnumerable<MonedaCubana.Models.Grupo>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutSolution.cshtml";
}

<h2>Listado de Grupos</h2>

<p>
    @Html.ActionLink("Nuevo", "Create", "Controller", new { @class = "btn btn-info", style = "margin-bottom:1em" })
</p>
<table class="display tableDesign" id="Cursos">
    <thead>
        <tr>
            <th>Sel.</th>
            <th>Eliminar</th>
            <th>Nombre</th>
            <th>Sesión</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td style="text-align:center">
                    @*<i class="fa fa-edit"></i>*@
                    @Html.ActionLink(" ", "Edit", new { id = item.NombreGrupo }, new { @class = "fa fa-edit", style = "margin-bottom:1em" })
                </td>
                <td style="text-align:center">
                    @*<i class="fa fa-close"></i>*@
                    <i class="fa fa-close" data-tipo="borrar" data-ci=@item.NombreGrupo></i>
                </td>               
                <td>
                    @Html.DisplayFor(modelItem => item.NombreGrupo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Sesion)
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
   @* <script src="~/res/jsProfesor.js"></script>*@

}