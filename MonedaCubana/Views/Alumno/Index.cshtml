@model IEnumerable<MonedaCubana.Models.Alumno>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutSolution.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Nuevo", "Create", "Controller", new { @class = "btn btn-info", style = "margin-bottom:1em" })
</p>
<table class="display tableDesign" id="Alumno">
    <thead>
        <tr>
            <th>Sel.</th>
            <th>Eliminar</th>
            <th>
                @Html.DisplayNameFor(model => model.Grupo.Sesion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Persona.Militancia)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telefono_Padre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telefono_Madre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nombre_Padre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nombre_Madre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Categoria)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Foto)
            </th>
            
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
    {
        <tr>
            <td style="text-align:center">
                @*<i class="fa fa-edit"></i>*@
                @Html.ActionLink(" ", "Edit", new { id = item.CI }, new { @class = "fa fa-edit", style = "margin-bottom:1em" })
            </td>
            <td style="text-align:center">
                @*<i class="fa fa-close"></i>*@
                <i class="fa fa-close" data-tipo="borrar" data-ci=@item.CI></i>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Grupo.Sesion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Persona.Militancia)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telefono_Padre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telefono_Madre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre_Padre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre_Madre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Categoria)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Foto)
            </td>
            
        </tr>
}
    </tbody>

</table>
