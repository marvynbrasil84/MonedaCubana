@model IEnumerable<MonedaCubana.Models.Alumno>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutSolution.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Nuevo", "Create", "Controller", new { @class = "btn btn-info", style = "margin-bottom:1em" })
</p>
<table class="display tableDesign" id="alumnos">
    <tr>
        <th>Sel.</th>
        <th>Eliminar</th>
        @* Datos Persona *@
        <th>CI</th>
        <th>Nombre</th>
        <th>Sexo</th>
        <th>Raza</th>
        <th>Nivel_Escolar</th>
        <th>Fecha_Nacimiento</th>
        <th>Telefono</th>
        <th>Lugar_Nacimiento</th>
        <th>Nacionalidad</th>
        <th>Militancia</th>
        <th>Direccion</th>
        <th>Correo</th>
        @* Datos Persona *@
        <th>Telefono_Padre</th>
        <th>Telefono_Madre</th>
        <th>Nombre_Padre</th>
        <th>Nombre_Madre</th>
        <th>Categoria</th>
        <th>Foto</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td style="text-align:center">
                <i class="fa fa-edit"></i>
            </td>
            <td style="text-align:center">
                <i class="fa fa-close"></i>
            </td>
            @* Datos Persona *@
            <td>
                @Html.DisplayFor(modelItem => item.Persona.CI)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Persona.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Persona.Sexo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Persona.Raza)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Persona.Nivel_Escolar)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Persona.Fecha_Nacimiento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Persona.Telefono)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Persona.Lugar_Nacimiento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Persona.Nacionalidad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Persona.Militancia)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Persona.Direccion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Persona.Correo)
            </td>
            @* Datos Persona *@
            <td>
                @Html.DisplayFor(modelItem => item.Telefono_Padre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telefono_Madre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre_Padre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre_Madre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Categoria)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Foto)
            </td>

        </tr>
    }

</table>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script src="~/res/jsAlumno.js"></script>
 
 }