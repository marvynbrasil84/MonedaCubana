<table class="display tableDesign" id="profesorasignatura">
    <thead>
        <tr>
            <th>
                Nombre Profesor
            </th>
            <th>
                Categoria Docente
            </th>
            <th>
                Categoria Científica
            </th>
            <th>
                Asociar Asociar
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Persona.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Categoria_Docente)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Categoria_Cientifica)
                </td>
                <td>
                    <input type="button" class="asociar" data-toggle="modal" data-target="#ModalTipoArchivo" data-tipo=@item.CI />
                </td>
            </tr>
        }
    </tbody>

</table>
<div class="modal fade" id="ModalTipoArchivo" tabindex="-1" @*role="dialog" data-accion="" data-backdrop="static" data-keyboard="false"*@>
    <div class="modal-dialog" role="document" style="width:70%">
        <div class="modal-content">
            <div id="contentModalTipoArchivo" class="modal-body">
                @Html.Partial("~/Views/profesorasignatura/_PartialAsignatura.cshtml", CountryList)
            </div>
            <div class="modal-footer">

            </div>
        </div>
    </div>
</div>

<div id="divProcesando" class="tableProcesando" style="position:fixed; top:50%; left:50%;">
    <table border="0" class="tablaAtajos" cellpadding="0" cellspacing="0">
        <tr>
            <td style="padding:10px;">
                <asp:Image ID="imgProgress" runat="server" ImageUrl="../../Imagenes/cargando.gif" />
                <asp:Label ID="lblProcesa" runat="server"
                                                                                                          Text="Procesando..." CssClass="GeneralItems"></asp:Label>
            </td>
        </tr>
    </table>
</div>

@section Scripts {

    @Scripts.Render("~/bundles/jqueryval")
    <script src="~/res/jsProfesorAsignatura.js"></script>
    
}
