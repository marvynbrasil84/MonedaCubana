@model MonedaCubana.Models.Profesor

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutSolution.cshtml";
}


@Html.AntiForgeryToken()
@Html.ValidationSummary(true)

<div class="form-horizontal">
    <h2>Crear Trabajador</h2>
    <hr />

    <div class="form-group">
        <label class="control-label col-md-2"> CI </label>
        <div class="col-md-3">
            <input type="text" id="Persona_CI" class="form-control" />

        </div>

        <label class="control-label col-md-2 col-md-offset-2"> Nombre </label>
        <div class="col-md-3">
            <input type="text" id="Persona_Nombre" class="form-control" />
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2"> Sexo </label>
        <div class="col-md-3">
            <input type="text" id="Persona_Sexo" class="form-control" />
        </div>

        <label class="control-label col-md-2 col-md-offset-2"> Nivel Escolar </label>
        <div class="col-md-3">
            <select id="Persona_Nivel_Escolar" class="form-control">
                <option value="Medio-Superior">Medio-Superior</option>
                <option value="Medio">Medio</option>
                <option value="Superior">Superior</option>
            </select>

        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2"> Fecha Nacimiento </label>
        <div class="col-md-3">
            <input type="text" id="Persona_Fecha_Nacimiento" class="form-control" />
        </div>

        <label class="control-label col-md-2 col-md-offset-2"> Correo </label>
        <div class="col-md-3">
            <input type="text" id="Persona_Correo" class="form-control" />

        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2"> Teléfono </label>
        <div class="col-md-3">
            <input type="text" id="Persona_Telefono" class="form-control" />
        </div>
        <label class="control-label col-md-2 col-md-offset-2"> Lugar de Nacimiento </label>
        <div class="col-md-3">
            <input type="text" id="Persona_Lugar_Nacimiento" class="form-control" />
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2"> Nacionalidad </label>
        <div class="col-md-3 ">
            <input type="text" id="Persona_Nacionalidad" class="form-control" />
        </div>
        <label class="control-label col-md-2 col-md-offset-2"> Militancia </label>
        <div class="col-md-3">
            <input type="text" id="Persona_Militancia" class="form-control" />
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2"> Salario </label>
        <div class="col-md-3">
            <input type="text" id="Persona_Salario" class="form-control" />
        </div>
        <label class="control-label col-md-2 col-md-offset-2"> Ocupación </label>
        <div class="col-md-3">
            <input type="text" id="Persona_Ocupacion" class="form-control" />
        </div>
    </div>

    <div class="form-group">

        <label class="control-label col-md-2 "> Raza </label>
        <div class="col-md-3">
            <select id="Persona_Raza" class="form-control">
                <option value="B">Blanco</option>
                <option value="M">Mestizo</option>
                <option value="N">Negro</option>
            </select>

        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2"> Dirección </label>
        <div class="col-md-10">
            <textarea type="text" id="Persona_Direccion" class="form-control" rows="3"></textarea>
        </div>
    </div>

</div>


<div class="row">
    <div class="col-md-6">
        @Html.ActionLink("<<Atrás", "Index")
    </div>
    <div class="col-md-6">
        <input type="button" id="btnCrear" class="right btn btn-info" value="Crear" />
    </div>
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script src="~/res/jsProfesor.js"></script>

}
