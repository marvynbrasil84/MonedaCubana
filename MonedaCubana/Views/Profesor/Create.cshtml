@model MonedaCubana.Models.Profesor

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutSolution.cshtml";
}


@Html.AntiForgeryToken()
@Html.ValidationSummary(true)

<div class="form-horizontal">
    <h2>Crear Facilitador</h2>
    <hr />

    <div class="form-group">
        <label class="control-label col-md-2"> CI </label>
        <div class="col-md-3">
            <input type="text" id="Persona_CI" class="form-control" onchange="Rutina_ValidaNumero_Entero(this)" maxlength="11" />
        </div>

        <label class="control-label col-md-2 col-md-offset-2"> Nombre </label>
        <div class="col-md-3">
            <input type="text" id="Persona_Nombre" class="form-control" onchange="Rutina_ValidarTexto(this)" />
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2"> Primer Apellido </label>
        <div class="col-md-3">
            <input type="text" id="Primer_Apellido" class="form-control" onchange="Rutina_ValidarTexto(this)" maxlength="11" />
        </div>

        <label class="control-label col-md-2 col-md-offset-2"> Segundo Apellido </label>
        <div class="col-md-3">
            <input type="text" id="Segundo_Apellido" class="form-control" onchange="Rutina_ValidarTexto(this)" />
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2"> Sexo </label>
        <div class="col-md-3">
            <select id="Persona_Sexo" class="form-control">
                <option value="Masculino">Masculino</option>
                <option value="Femenino">Femenino</option>

            </select>

        </div>

        <label class="control-label col-md-2 col-md-offset-2"> Nivel Escolar </label>
        <div class="col-md-3">
            <select id="Persona_Nivel_Escolar" class="form-control">
                <option value="Medio-Superior">Medio-Superior</option>
                <option value="Medio">Medio</option>
                <option value="Superior">Superior</option>
            </select>

        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2"> Fecha Nacimiento </label>
        <div class="col-md-3">
            <input type="text" id="Persona_Fecha_Nacimiento" class="form-control" />
        </div>

        <label class="control-label col-md-2 col-md-offset-2"> Correo </label>
        <div class="col-md-3">
            <input type="text" id="Persona_Correo" class="form-control" onchange="ValidarCampoTextoFormatoCorreo(this)" />

        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2"> Teléfono </label>
        <div class="col-md-3">
            <input type="text" id="Persona_Telefono" class="form-control" onchange="Rutina_ValidaNumero_Entero(this)" />
        </div>
        <label class="control-label col-md-2 col-md-offset-2"> Lugar de Nacimiento </label>
        <div class="col-md-3">
            <input type="text" id="Persona_Lugar_Nacimiento" class="form-control" onchange="Rutina_ValidarTexto(this)" />
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2"> Nacionalidad </label>
        <div class="col-md-3 ">
            <input type="text" id="Persona_Nacionalidad" class="form-control" onchange="Rutina_ValidarTexto(this)" />
        </div>
        <label class="control-label col-md-2 col-md-offset-2"> Militancia </label>
        <div class="col-md-3">
            <select id="Persona_Militancia" class="form-control">
                <option value="UJC">UJC</option>
                <option value="PCC">PCC</option>
                <option value="No">No</option>
            </select>
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2"> Salario </label>
        <div class="col-md-3">
            <input type="text" id="Persona_Salario" class="form-control" onchange="Rutina_ValidaNumero_Entero(this)" />
        </div>
        <label class="control-label col-md-2 col-md-offset-2"> Categoría Científica </label>
        <div class="col-md-3">
            <select id="Persona_Categoria_Cientifica" class="form-control">
                <option value="Máster">Máster</option>
                <option value="Doctor">Doctor</option>
                <option value="No">No</option>
            </select>
        </div>
    </div>

    <div class="form-group">

        <label class="control-label col-md-2 "> Color de Piel </label>
        <div class="col-md-3">
            <select id="Persona_Raza" class="form-control">
                <option value="Blanco">Blanco</option>
                <option value="Mestizo">Mestizo</option>
                <option value="Negro">Negro</option>
                <option value="Amarillo">Amarillo</option>
            </select>

        </div>
        <label class="control-label col-md-2 col-md-offset-2"> Categoria Docente </label>
        <div class="col-md-3">
            <select id="Persona_Categoria_Docente" class="form-control">
                <option value="Instructor">Instructor</option>
                <option value="Asistente">Asistente</option>
                <option value="Auxiliar">Auxiliar</option>
                <option value="Titular">Titular</option>
                <option value="No">No</option>
            </select>
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2"> Provincia </label>
        <div class="col-md-3">
            <select id="Provincia" class="form-control">
                <option value="Pinar del Río">Pinar del Río</option>
                <option value="La Habana">La Habana</option>
                <option value="Mayabeque">Mayabeque</option>
                <option value="Villa Clara">Villa Clara</option>
                <option value="Cienfuegos">Cienfuegos</option>
                <option value="Sancti Spiritus">Sancti Spiritus</option>
                <option value="Ciego de Avila">Ciego de Avila</option>
                <option value="Camaguey">Camaguey</option>
                <option value="Las Tunas">Las Tunas</option>
                <option value="Holguín">Holguín</option>
                <option value="Granma">Granma</option>
                <option value="Santiago de Cuba">Santiago de Cuba</option>
                <option value="Guantánamo">Guantánamo</option>
            </select>
        </div>

        <label class="control-label col-md-2 col-md-offset-2"> Municipio </label>
        <div class="col-md-3">
            <select id="Municipio" class="form-control">
            </select>
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2"> Fecha Inicio </label>
        <div class="col-md-2">
            <input type="text" id="FIC" class="form-control" />
        </div>
        <label class="control-label col-md-2 "> Fecha Fin </label>
        <div class="col-md-2">
            <input type="text" id="FFC" class="form-control" />
        </div>

        <label class="control-label col-md-2 "> Número de Contrato </label>
        <div class="col-md-2">
            <input type="text" id="NC" class="form-control" />
        </div>

    </div>

    <div class="form-group">
        <label class="control-label col-md-2"> Años de Experiencia </label>
        <div class="col-md-3">
            <input type="text" id="Experiencia" class="form-control" onchange="Rutina_ValidaNumero_Entero(this)" />
        </div>
        <label class="control-label col-md-2 col-md-offset-2"> Especialidad </label>
        <div class="col-md-3">
            <input type="text" id="Especialidad" class="form-control" onchange="Rutina_ValidarTexto(this)" />
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2"> Dirección </label>
        <div class="col-md-10">
            <textarea type="text" id="Persona_Direccion" class="form-control" rows="3"></textarea>
        </div>
    </div>

</div>



<div class="row">
    <div class="col-md-6">
        @Html.ActionLink("<<Atrás", "Index")
    </div>
    <div class="col-md-6">
        <input type="button" id="btnCrear" class="right btn btn-info" value="Crear" />
    </div>
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script src="~/res/jsProfesor.js"></script>

}
